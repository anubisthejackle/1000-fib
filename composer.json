{
  "name": "alleyinteractive/thousand-fib",
  "description": "Thousand Fib",
  "type": "project",
  "authors": [
    {
      "name": "Alley Interactive",
      "email": "noreply@alleyinteractive.com"
    }
  ],
  "require-dev": {
    "alleyinteractive/alley-coding-standards": "^0.3.0",
    "phpunit/phpunit": "^9.5",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "scripts": {
    "phpcbf": "phpcbf .",
    "phpcs": "phpcs .",
    "phpunit": "./vendor/phpunit/phpunit/phpunit --enforce-time-limit",
    "setup": [
      "composer install",
      ". $NVM_DIR/nvm.sh && nvm use && npm ci && npm run build"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
